{
  "name": "node-template",
  "version": "1.0.0",
  "description": "Node template for personal use",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc",
    "local": "node ./dist/server.js",
    "docker:stop": "docker stop back-end",
    "docker:destroy": "docker stop back-end && docker rm back-end",
    "docker:build": "docker build -t back-end .",
    "docker:run": "docker run -d -p 3000:3000 --name back-end back-end",
    "docker:exec": "docker exec -it 17b8090c66ae //bin//bash"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spencercrews/node-template.git"
  },
