{
  "name": "node-template",
  "version": "1.0.0",
  "description": "Node template for personal use",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc",
    "local": "node ./dist/server.js",
    "docker:stop": "docker stop local-node-app && docker rm local-node-app",
    "docker:build" : "docker build -t node-app .",
    "docker:run" : "docker rm local-node-app && docker run -d -p 3000:3000 --name local-node-app node-app"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spencercrews/node-template.git"
  },
