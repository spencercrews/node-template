  "bugs": {
    "url": "https://github.com/spencercrews/node-template/issues"
  },
  "homepage": "https://github.com/spencercrews/node-template#readme",
  "dependencies": {
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "typescript": "^5.7.2"
  },
  "devDependencies": {
    "@types/express": "^5.0.0"
  }
}
